<%= render 'posts/list', posts: @posts %>








<div class="booksbody">
<div class="container">
	<div class="row">
		<div class="col-xs-3">

<div class="profile-container">
<h1>User info</h1>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>  <!-- # このように変更 -->
   <table class="table">
   	<tr>
   		<td>Name</td>
   		<td> <%= current_user.name %></td>
   	</tr>
   <tr>
   	<td>Introduction</td>
   	  <td><%= current_user.introduction %></td>
   </tr>

</table>
	<% if @user.id == current_user.id %>
        <p><%= link_to "", edit_user_path(@user),class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>
    <% end %>



</div>

<h1>New book</h1>
<%= form_for(@post) do |f| %>
<div class="field row"><p>Title</p>
    <%= f.text_field :books_name,class: "col-xs-12" %>
    </div>

   <div class="field row"><p>Opinion</p>
    <%= f.text_area :caption,class: "col-xs-12" %>
    <br></div>

    <%= f.submit "Create Book",class: "btn btn-primary col-xs-12" %>


<% end %>

</div>


<div class="col-xs-9">




<h1>Books</h1>

<table class="table">
	<thead>
	<tr>
		<th>Title</th>
		<th>Opinion</th>
		<th colspan="3"></th>
	</tr>
	</thead>



	<% @posts.each do |post| %>

	<tbody>
<tr>
        <td><%= attachment_image_tag post.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", :size => "40x40" %></td>
        <td><%= post.books_name %></td>
        <td><%= post.caption %></td>


        </td>
      </tr>
</tbody>
<% end %>
</table>
</div>
</div>
</div>
</div>
</div>
<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>