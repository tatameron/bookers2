<%= render 'posts/list', posts: @posts %>

<div class="booksbody">
  <div class="container">
    <div class="row">
     <div class="col-md-6 col-md-offset-3">
          <h1>Editing book</h1>
          <!-- form_for部分 -->
          <%= form_for(@post) do |f| %>

          <div class="field row">
          <strong>  <p class="edittitle">Title</p></strong>
            <%= f.text_field :books_name, class: "col-xs-12" %>
          </div>
          <div class="field row">

           <strong> <p class="editbody">Opinion</p></strong>
            <%= f.text_area :caption, class: "col-xs-12" %>
          </div>
          <%= f.submit 'Update Book' ,class: "col-xs-12 btn-primary" %>
          <br>
          <br>
          <%= link_to "Show", post_path(@post),class:
          "show_#{@post.id}" %>
          |
          <%= link_to "Back", posts_path(@post),class: "back" %>


      </div>
    </div>
  </div>
</div>
<% end %>


