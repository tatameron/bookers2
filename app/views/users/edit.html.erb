<%= render 'posts/list', posts: @posts %>

<div class="booksbody">
<div class="container">
  <div class="row">
    <div class="col-xs-3">

      <h2>User info</h2>

      <%= form_for(@user) do |f| %>
<div class="field">
      <p>Name</p>
      <%= f.text_field :name%>
</div>
     <div class="field"> <p>Image</p>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
</div>
<div class="field">
      <p>Introduction</p>
      <%= f.text_field :introduction %>
</div>
      <%= f.submit "Update user" %>
      <% end %>

    </div>
  </div>
</div>
</div>
<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>

