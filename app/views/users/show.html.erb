<%= render 'posts/list', posts: @posts %>





<div class="booksbody">
  <div class="container">
   <div class="row">
    <div class="col-xs-3">

      <div class="profile-container">
        <h1>User info</h1>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>  <!-- # このように変更 -->
        <table class="table">
          <tr>
           <td>Name</td>
           <td> <%= @user.name %></td>
         </tr>
         <tr>
          <td>Introduction</td>
          <td><%= @user.introduction %></td>
        </tr>

      </table>
      <% if @user.id == current_user.id %>
      <p><%= link_to "", edit_user_path(@user),class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>
      <% end %>


    </div>

    <h1>New book</h1>
    <%= form_for(@post) do |f| %>
    <div class="field row"><p>Title</p>
      <%= f.text_field :books_name,class: "col-xs-12" %>
    </div>

    <div class="field row"> <p>Opinion</p>
      <%= f.text_area :caption,class: "col-xs-12" %>
    </div>
    <br>

    <%= f.submit "Create Book",class: "btn btn-primary col-xs-12" %>


    <% end %>
  </div>
  <div class="col-xs-9">

    <h1>Books</h1>





    <table class="table table-hover table-inverse">
     <thead>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>



    </thead>
    <% @posts.each do |post| %>
    <tbody>
      <tr>
        <td><%= attachment_image_tag post.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", :size => "40x40" %></td>
        <td><%=link_to post_path(post.id) do %>
          <%= post.books_name %>
          <% end %>
        </td>
        <td><%= post.caption %></td>


      </td>
    </tr>
  </tbody>
  <% end %>
</table>
</div>
</div>
</div>
</div>


